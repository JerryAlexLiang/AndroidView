<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--使用自定义属性需要添加schemas： xmlns:app=”http://schemas.android.com/apk/res-auto”-->
    <com.example.customview.customView.CustomGroupWidgetTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:title_bar_background="@color/colorPrimary"
        app:title_text_color="@color/colorWhite"
        app:title_text_content="@string/title_bar_content">

    </com.example.customview.customView.CustomGroupWidgetTitleBar>


</LinearLayout>  