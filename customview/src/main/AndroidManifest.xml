<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.customview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ExtendsWidgetActivity" />
        <activity android:name=".activity.ExtendsViewActivity" />
        <activity android:name=".activity.ExtendsGroupWidgetActivity" />
        <activity android:name=".activity.ExtendsViewGroupActivity" />
        <activity android:name=".activity.MyPopupWindow" />
        <activity android:name=".activity.MyProgressActivity"></activity>
    </application>

</manifest>